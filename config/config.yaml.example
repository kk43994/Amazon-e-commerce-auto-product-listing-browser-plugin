# 紫鸟RPA配置文件示例
# 使用前请复制此文件为 config.yaml 并填写实际配置

# 紫鸟浏览器配置
ziniao:
  # 紫鸟浏览器安装路径
  client_path: "D:\\ziniao\\ziniao.exe"  # Windows
  # client_path: "/Applications/SuperBrowser.app/Contents/MacOS/SuperBrowser"  # Mac

  # HTTP通信端口
  port: 8848

  # 紫鸟账号信息
  account:
    company: "你的公司名"
    username: "你的用户名"
    password: "你的密码"

# ChromeDriver配置
chromedriver:
  # ChromeDriver路径(可选,不填则使用系统PATH中的)
  path: ""
  # path: "C:\\Tools\\chromedriver.exe"

# Excel数据文件配置
data:
  # 输入文件路径
  input_excel: "data/input/products.xlsx"

  # 工作表名称(留空则使用第一个工作表)
  sheet_name: ""

  # 必需的列名(根据实际Excel调整)
  required_columns:
    - title
    - brand
    - price
    - quantity

# 上传配置
upload:
  # 每个商品上传后的等待时间(秒)
  wait_between_products: 3

  # 上传失败后是否继续
  continue_on_error: true

  # 是否在上传前截图
  screenshot_before: false

  # 是否在上传后截图
  screenshot_after: true

  # 截图保存目录
  screenshot_dir: "logs/screenshots"

# 日志配置
logging:
  # 日志级别: DEBUG, INFO, WARNING, ERROR
  level: "INFO"

  # 日志文件路径
  file: "logs/ziniao_rpa.log"

  # 是否同时输出到控制台
  console: true

# 其他配置
settings:
  # 最大重试次数
  max_retries: 3

  # 元素等待超时时间(秒)
  element_wait_timeout: 30

  # 页面加载超时时间(秒)
  page_load_timeout: 60
